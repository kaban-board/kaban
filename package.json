{
  "name": "kaban",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "bun run --filter '*' build",
    "build:bin": "bun run --filter @kaban/cli build:bin",
    "build:bin:all": "bun run --filter @kaban/cli build:bin:all",
    "test": "bun run --filter '*' test",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11"
  }
}
