{
  "name": "@kaban-board/tui",
  "version": "0.3.2",
  "description": "Terminal User Interface for Kaban - Kanban for AI Agents",
  "type": "module",
  "bin": {
    "kaban-tui": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun --packages external && chmod +x ./dist/index.js",
    "build:bin": "bun build --compile --minify ./src/index.ts --outfile ./dist/kaban-tui --external @libsql/client --define \"process.env.KABAN_NO_LIBSQL='true'\"",
    "dev": "bun run ./src/index.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@kaban-board/core": "workspace:*",
    "@opentui/core": "^0.1.69"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaban-board/kaban.git",
    "directory": "packages/tui"
  },
  "homepage": "https://beshkenadze.github.io/kaban",
  "bugs": {
    "url": "https://github.com/beshkenadze/kaban/issues"
  },
  "license": "MIT",
  "author": "Aleksandr Beshkenadze <beshkenadze@gmail.com>",
  "keywords": [
    "kanban",
    "tui",
    "terminal",
    "ui"
  ],
  "publishConfig": {
    "access": "public"
  }
}
